@model IPTreatmentManagementPortal.Models.PatientDetail

@{
    ViewData["Title"] = "ChooseTreatmentPlan";
}

<h1>ChooseTreatmentPlan</h1>

<h4>PatientDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChooseTreatmentPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ailment" class="control-label"></label>
                <input asp-for="Ailment" class="form-control" />
                <span asp-validation-for="Ailment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Package" class="control-label"></label>
                <div class="col-md-12">
                    @Html.DropDownList("Package",
                  new SelectList(Enum.GetValues(typeof(IPTreatmentManagementPortal.Models.Package))),
                  "Select Package", new { @class = "form-control" })
                   
                </div>
                <span asp-validation-for="Package" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Proceed" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

